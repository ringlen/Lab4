<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
            Title="Ticket Booking System" Height="450" Width="800" Background="Ivory">
    <Grid Margin="10">
        <StackPanel>

            <TextBlock Text="Назва події:" Width="333" HorizontalAlignment="Left"/>
            <TextBox x:Name="EventNameTextBox" Width="370" HorizontalAlignment="Left"/>

            <TextBlock Text="Дата:"/>
            <DatePicker x:Name="EventDatePicker" HorizontalAlignment="Left" Width="128"/>

            <TextBlock Text="Місце проведення:"/>
            <TextBox x:Name="VenueTextBox" HorizontalAlignment="Left" Width="370"/>

            <ComboBox x:Name="TicketTypeComboBox" SelectedIndex="0" Width="200"
                  SelectionChanged="TicketTypeComboBox_SelectionChanged" HorizontalAlignment="Left">
                <ComboBoxItem Content="Концерт"/>
                <ComboBoxItem Content="Кіно"/>
            </ComboBox>

            <StackPanel x:Name="ConcertPanel">
                <TextBlock Text="Сектор:"/>
                <TextBox x:Name="SectorTextBox" HorizontalAlignment="Left" Width="87"/>
                <TextBlock Text="Виконавець:"/>
                <TextBox x:Name="PerformerTextBox" Width="370" HorizontalAlignment="Left"/>
            </StackPanel>

            <StackPanel x:Name="MoviePanel" Visibility="Collapsed">
                <TextBlock Text="Жанр:"/>
                <TextBox x:Name="GenreTextBox"/>
                <TextBlock Text="Тривалість (хв):"/>
                <TextBox x:Name="DurationTextBox"/>
            </StackPanel>

            <Button Content="Додати квиток" Click="AddTicket_Click" Margin="0,10,0,0" Width="120" HorizontalAlignment="Left"/>

            <TextBlock Text="Квитки сьогодні:" Margin="0,20,0,0"/>
            <TextBlock x:Name="TicketsTodayTextBlock" FontWeight="Bold"/>

        </StackPanel>
    </Grid>
</Window>
